<section class="height-full-navbar-footer flex justify-center items-center">
  <div class="h-1/3 sm:h-2/3 lg:h-full flex px-1 md:px-2 lg:px-3 py-6 whitespace-nowrap overflow-x-scroll overflow-y-hidden hide-scrollbar"
         data-controller="scroll modal"
         data-action="wheel->scroll#scroll">
    <% @photos.reverse.each_with_index do |photo, i| %>
      <div class="group relative mx-1 md:mx-2 lg:mx-3 h-full">
        <%= cl_image_tag photo.image.key, class: 'h-full max-w-max' %>
        <div class="group-hover:opacity-100 opacity-0 transition duration-500 absolute top-0 left-0 w-full h-full flex flex-col justify-between cursor-pointer"
              data-action="click->modal#display"
              data-id="<%= i %>">
          <% if photo.name.present? %>
            <div class="hidden sm:block text-center w-full bg-white bg-opacity-50 flex items-center justify-center p-8">
              <p class="whitespace-normal"><%= photo.name&.upcase %></p>
            </div>
          <% end %>
          <% if photo.description.present? %>
            <div class="hidden sm:block text-center w-full bg-white bg-opacity-50 flex items-center justify-center p-8">
              <p class="whitespace-normal"><%= photo.description %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    <span class="absolute top-1/2 left-5 text-white cursor-pointer text-5xl hidden lg:block"
          data-scroll-target="left"
          style="text-shadow: 1px 1px 0 #000, -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;">
        <i class="fas fa-angle-left"></i>
    </span>
    <span class="absolute top-1/2 right-5 text-white cursor-pointer text-5xl hidden lg:block"
          data-scroll-target="right"
          style="text-shadow: 1px 1px 0 #000, -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;">
        <i class="fas fa-angle-right" ></i>
    </span>
    <%= render 'shared/photo_modal', photos: @photos.reverse %>
  </div>
</section>
