<div class="hidden absolute top-20 left-0 z-90 bg-white height-full-navbar-footer w-screen flex flex-col justify-center items-center"
     style="border: 1rem solid rgba(0,0,0,0.1);"
     data-contact-target="modal">
  <%= simple_form_for @contact, url: contact_path, html: { style: 'max-width: 30rem;', class: 'relative w-5/6 sm:w-4/6 lg:w-3/6 max-w-6xl', data: { 'contact-target' => 'form', action: 'submit->contact#submit' } } do |f| -%>
    <span data-action="click->contact#hide" class="absolute right-0 h-6 w-6 cursor-pointer" style="transform: translateY(-150%);">
      <svg  class="h-full w-full"
            xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="100%" height="100%" viewBox="0 0 50 50" style=" fill:#000000;">
        <path d="M 7.71875 6.28125 L 6.28125 7.71875 L 23.5625 25 L 6.28125 42.28125 L 7.71875 43.71875 L 25 26.4375 L 42.28125 43.71875 L 43.71875 42.28125 L 26.4375 25 L 43.71875 7.71875 L 42.28125 6.28125 L 25 23.5625 Z">
        </path>
      </svg>
    </span>
    <span class="recaptcha-error-notice hidden" data-contact-target="recaptchaErrorNotice">
      Erreur recaptcha
    </span>
    <%= f.input :email,
                wrapper_html: { class: 'my-4 border focus-within:border-blue-500 focus-within:text-blue-500 transition-all duration-500 relative rounded  py-1.5 px-2' },
                label_html: { class: '-mt-4 absolute tracking-wider px-1 uppercase text-xs bg-white text-gray-600 px-1' },
                input_html: { class: 'px-1 text-gray-900 outline-none border-0 block h-full w-full text-xs py-2 font-extralight focus:ring-transparent' } %>
    <%= f.input :content, as: :text, cols: 5, rows: 10,
                wrapper_html: { class: 'my-4 border focus-within:border-blue-500 focus-within:text-blue-500 transition-all duration-500 relative rounded  py-1.5 px-2' },
                label_html: { class: '-mt-4 absolute tracking-wider px-1 uppercase text-xs bg-white text-gray-600 px-1' },
                input_html: { class: 'px-1 text-gray-900 outline-none border-0 block h-full w-full text-sm py-2 font-extralight focus:ring-transparent' } %>
    <%= f.submit 'Envoyer', class: 'bg-white hover:bg-gray-100 text-gray-800 py-2 px-12 border rounded mx-auto block font-extralight uppercase text-sm transition-all cursor-pointer' %>
  <% end -%>
    <%= recaptcha_execute('contact') %>
</div>

